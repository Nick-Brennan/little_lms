<!DOCTYPE html>
<html>
<head>
  <title>LittleLms</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  	<link href="/assets/c3.min.css" rel="stylesheet" type="text/css">
 	<script src="//d3js.org/d3.v3.min.js"></script>
<script src="/assets/c3.min.js"></script>
</head>
<body>
<%= render "partials/nav" unless @disable_nav %>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
<p class="navbar-text pull-right">
<% if teacher_signed_in? %>
  Logged in as <strong><%= current_teacher.email %></strong>.
  <%= link_to 'Edit profile', edit_teacher_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_teacher_session_path, method: :delete, :class => 'navbar-link'  %>
<% else %>
  <%= link_to "Sign up", new_teacher_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_teacher_session_path, :class => 'navbar-link'  %>
<% end %>
<%= yield %>

</body>
</html>
