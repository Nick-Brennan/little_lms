<html>
<head>
	<title></title>
</head>
<body>
	<div class="container-fluid">
	<h1> Available Cohorts </h1>
	<ul> 
		<% @cohorts.each do |cohort| %>
		<li><h2><%=link_to "Cohort #{cohort.name}", cohort_show_path(cohort.id) %></h2></li>
		<%end%>
	</ul>
	<div>
		<%= form_for @cohort, url: "/cohort/new" do  |f| %>
						<%= f.text_field :name, :placeholder => "Cohort Number" %><br>
						<%= f.text_area :subject, :placeholder => "Cohort Type" %><br>
						<%= f.submit "Add cohort" %>
					<% end %>
	</div>
   </div>

</body>
</html>